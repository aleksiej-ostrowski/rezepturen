const theme = createTheme();

export default function App() {
  const [data, setData] = useState([]);

  const baseURL = "https://aleksiej.website/random/";

  React.useEffect(() => {
    axios
      .get(baseURL)
      .then((response) => {
        console.log(response.data);

        return response.data.map((x) => [
          x["recipes"][0]["diets"].join(", "),
          x["recipes"][0]["title"],
          x["recipes"][0]["image"],
          x["recipes"][0]["summary"],
          x["recipes"][0]["instructions"],
          x["recipes"][0]["spoonacularSourceUrl"],

          x["recipes"][0]["extendedIngredients"].map((e) => [
            e["id"],
            e["original"],
            e["amount"],
            e["image"],
            e["aisle"],
          ]),
        ]);
      })
      .then(function (jsonData) {
        console.log(jsonData);
        setData(jsonData);
      })
      .catch(function (error) {
        console.log(error);
      });
  }, []);

  console.log(data);

  return (
    <Container>
      <CssBaseline />
      <Header />
      <Grid2 container spacing={4}>
        {data &&
          data.length > 0 &&
          data.map((record) => {
            console.log("record", record[1])  
            return (
              <>  
              <Grid2 item xs={6} md={4}>
                <MyCard
                  title={record[1]}
                  subheader={record[0]}
                  picture={record[2]}
                  short={delUrlsFromText(record[3])}
                  method={record[4]}
                />
              </Grid2>
              </>   
            );
          })}

      </Grid2>
      <Badge badgeContent={4} color="primary">
        <EmailIcon color="action" />
      </Badge>
      <Box sx={{ my: 4 }}>
        <Typography variant="h4" component="h1" gutterBottom>
          Create React App example
        </Typography>
        <ProTip />
        <Copyright />
      </Box>
      <Footer />
    </Container>
  );
}
